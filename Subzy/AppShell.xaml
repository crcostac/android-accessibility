<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Subzy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Subzy"
    Title="Subzy">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />

        <ShellContent
            Title="Debug"
            Icon="bug.png"
            ContentTemplate="{DataTemplate local:DebugPage}"
            Route="DebugPage" />
    </TabBar>

    <ShellContent
        Title="Onboarding"
        ContentTemplate="{DataTemplate local:OnboardingPage}"
        Route="OnboardingPage" />

</Shell>
