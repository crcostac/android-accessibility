<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Subzy.DebugPage"
             Title="Debug">

    <ScrollView>
        <Grid Padding="20" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label Grid.Row="0"
                   Text="Debug Console" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- PNG Files from Downloads -->
            <Frame Grid.Row="1">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="PNG Files from Downloads" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}"/>

                        <Button Grid.Column="1"
                                Text="Refresh"
                                Command="{Binding LoadPngFilesCommand}"
                                BackgroundColor="Gray"
                                TextColor="White"
                                FontSize="14"
                                Padding="10,5"/>
                    </Grid>

                    <CollectionView ItemsSource="{Binding PngFiles}"
                                    SelectedItem="{Binding SelectedPngFile}"
                                    SelectionMode="Single"
                                    HeightRequest="120">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding}"
                                       FontSize="14"
                                       LineBreakMode="TailTruncation"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=SelectedItem}"
                                                     Value="{Binding}">
                                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"/>
                                            <Setter Property="TextColor" Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Selected Image and OCR Result -->
            <Frame Grid.Row="2">
                <Grid ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Selected Image Display -->
                    <VerticalStackLayout Grid.Column="0" Spacing="10">
                        <Label Text="Selected Image" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}"/>
                        <Image Source="{Binding SelectedImage}"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- OCR Result Text -->
                    <VerticalStackLayout Grid.Column="1" Spacing="10">
                        <Label Text="OCR Result" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}"/>
                        <ScrollView HeightRequest="200">
                            <Editor Text="{Binding OcrResultText}"
                                    IsReadOnly="True"
                                    FontSize="14"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}"
                                    AutoSize="TextChanges"/>
                        </ScrollView>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Debug Output -->
            <Frame Grid.Row="3">
                <ScrollView HeightRequest="200">
                    <Editor Text="{Binding DebugOutput}"
                            IsReadOnly="True"
                            FontFamily="Courier"
                            FontSize="12"
                            TextColor="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}"/>
                </ScrollView>
            </Frame>

            <!-- Control Buttons -->
            <Grid Grid.Row="4" ColumnSpacing="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0"
                        Text="Test OCR"
                        Command="{Binding TestOcrCommand}"
                        IsEnabled="{Binding IsTesting, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"/>

                <Button Grid.Row="0" Grid.Column="1"
                        Text="Test Translation"
                        Command="{Binding TestTranslationCommand}"
                        IsEnabled="{Binding IsTesting, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"/>

                <Button Grid.Row="1" Grid.Column="0"
                        Text="Test TTS"
                        Command="{Binding TestTtsCommand}"
                        IsEnabled="{Binding IsTesting, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"/>

                <Button Grid.Row="1" Grid.Column="1"
                        Text="View Logs"
                        Command="{Binding ViewLogsCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        FontSize="16"/>
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>
